<%= render "episodes/podcast/frame", podcast: @podcast do %>
  <div class="pt-16 pb-12 sm:pb-4 lg:pt-12">
    <div class="lg:px-8">
      <div class="lg:max-w-4xl">
        <div class="mx-auto px-4 sm:px-6 md:max-w-2xl md:px-4 lg:px-0">
          <h1 id="main_title" class="text-2xl font-bold leading-7 text-slate-900">Episodes</h1>
        </div>
      </div>
    </div>

    <div class="w-full text-center">
      <% if @page.prev %>
        <%= link_to pagy_url_for(@page, @page.prev), rel: "prev", class: "mt-2 text-sm font-bold leading-6 text-pink-500 hover:text-pink-700 active:text-pink-900 lg:inline-block" do %>
          Load newer shows
        <% end %>
      <% end %>
    </div>

    <div class="divide-y divide-slate-100 sm:mt-4 lg:mt-8 lg:border-t lg:border-slate-100">
      <%= render @episodes %>
    </div>

    <div class="w-full text-center">
      <% if @page.next %>
        <%= link_to pagy_url_for(@page, @page.next), rel: "next", class: "mt-2 text-sm font-bold leading-6 text-pink-500 hover:text-pink-700 active:text-pink-900 lg:inline-block" do %>
          Load older shows
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
